<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>ar.com.finit</groupId>
	<artifactId>tetris</artifactId>
	<version>1.0</version>
	<packaging>jar</packaging>

	<name>tetris</name>
	<url>http://maven.apache.org</url>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.1</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.reflections</groupId>
			<artifactId>reflections</artifactId>
			<version>0.9.9-RC1</version>
		</dependency>
		
            
	</dependencies>

<build>
	<plugins>

  <plugin>
    <artifactId>maven-assembly-plugin</artifactId>
    <executions>
      <execution>
        <phase>package</phase>
        <goals>
          <goal>single</goal>
        </goals>
      </execution>
    </executions>
    <configuration>
    	<archive>
                    <manifest>
                        <mainClass>ar.com.finit.tetris.App</mainClass>
                    </manifest>
                </archive>
      <descriptorRefs>
        <descriptorRef>jar-with-dependencies</descriptorRef>
      </descriptorRefs>
    </configuration>
  </plugin>


  <plugin>
    <groupId>org.apache.maven.plugins</groupId>
    <artifactId>maven-antrun-plugin</artifactId>
    <version>1.1</version>
    <executions>
        <execution>
            <phase>test</phase>
            <goals>
                <goal>run</goal>
            </goals>
            <configuration>
                <tasks>
                    <echo>Using env.test.properties</echo>
                    <copy file="red.png" tofile="${basedir}/target/red.png"/>
                    <copy file="blue.png" tofile="${basedir}/target/blue.png"/>
                    <copy file="purple.png" tofile="${basedir}/target/purple.png"/>
                    <copy file="orange.png" tofile="${basedir}/target/orange.png"/>
                    <copy file="green.png" tofile="${basedir}/target/green.png"/>
                    <copy file="lightBlue.png" tofile="${basedir}/target/lightBlue.png"/>
                    <copy file="grey.png" tofile="${basedir}/target/grey.png"/>
                    <copy file="yellow.png" tofile="${basedir}/target/yellow.png"/>
                    </tasks>
                </configuration>
            </execution>
        </executions>
    </plugin>

   <plugin>
  <artifactId>maven-compiler-plugin</artifactId>
  <version>2.3.2</version>
  <configuration>
   <source>1.6</source>
   <target>1.6</target>
  </configuration>
 </plugin>
 
		</plugins>
	</build>
</project>
